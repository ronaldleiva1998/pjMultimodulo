@{
    ViewData["Title"] = "Reservas / Citas";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-3 text-center">Reservar Cita</h4>
                    <form method="post" action="/Reserva/Reservar">
                        <div class="mb-3">
                            <label for="fecha" class="form-label">Fecha disponible</label>
                            <select class="form-select" id="fecha" name="fecha" required>
                                <option value="">Seleccione una fecha</option>
                                <option value="2024-06-10">10/06/2024</option>
                                <option value="2024-06-11">11/06/2024</option>
                                <option value="2024-06-12">12/06/2024</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="lugar" class="form-label">Lugar</label>
                            <select class="form-select" id="lugar" name="lugar" required>
                                <option value="">Seleccione un lugar</option>
                                <option value="Sala 1">Sala 1</option>
                                <option value="Sala 2">Sala 2</option>
                                <option value="Sala 3">Sala 3</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="hora" class="form-label">Hora</label>
                            <select class="form-select" id="hora" name="hora" required>
                                <option value="">Seleccione una hora</option>
                                <option value="09:00">09:00</option>
                                <option value="10:00">10:00</option>
                                <option value="11:00">11:00</option>
                                <option value="12:00">12:00</option>
                            </select>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success">Reservar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-10">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-3 text-center">Citas Reservadas</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Lugar</th>
                                    <th>Hora</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Aquí se deben mostrar las citas reservadas dinámicamente -->
                                <tr>
                                    <td>10/06/2024</td>
                                    <td>Sala 1</td>
                                    <td>09:00</td>
                                </tr>
                                <tr>
                                    <td>11/06/2024</td>
                                    <td>Sala 2</td>
                                    <td>10:00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
