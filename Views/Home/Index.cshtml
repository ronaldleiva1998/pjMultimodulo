@{
    ViewData["Title"] = "Menú Principal";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container-fluid">
    <div class="row flex-md-nowrap">
        <!-- Sidebar for desktop, topbar for mobile -->
        <nav class="col-12 col-md-3 col-lg-2 bg-light sidebar py-4 mb-3 mb-md-0">
            <div class="d-md-block d-none position-sticky">
                <h4 class="text-center mb-4">Menú de Módulos</h4>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Proyecto" asp-action="Index">
                            <i class="bi bi-kanban"></i> Gestión de Proyectos
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Inventario" asp-action="Index">
                            <i class="bi bi-box-seam"></i> Inventario
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Factura" asp-action="Index">
                            <i class="bi bi-receipt"></i> Facturación
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Reserva" asp-action="Index">
                            <i class="bi bi-calendar-check"></i> Reservas / Citas
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Taller" asp-action="Index">
                            <i class="bi bi-tools"></i> Gestión de Talleres
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Usuario" asp-action="Login">
                            <i class="bi bi-person"></i> Iniciar Sesión
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Mobile topbar -->
            <div class="d-md-none">
                <div class="dropdown mb-3">
                    <button class="btn btn-outline-primary w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Menú de Módulos
                    </button>
                    <ul class="dropdown-menu w-100">
                        <li><a class="dropdown-item" asp-controller="Proyecto" asp-action="Index">Gestión de Proyectos</a></li>
                        <li><a class="dropdown-item" asp-controller="Inventario" asp-action="Index">Inventario</a></li>
                        <li><a class="dropdown-item" asp-controller="Factura" asp-action="Index">Facturación</a></li>
                        <li><a class="dropdown-item" asp-controller="Reserva" asp-action="Index">Reservas / Citas</a></li>
                        <li><a class="dropdown-item" asp-controller="Reserva" asp-action="Reservar">Reservar Cita</a></li>
                        <li><a class="dropdown-item" asp-controller="Taller" asp-action="Index">Gestión de Talleres</a></li>
                        <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Login">Iniciar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Main Content -->
        <main class="col-12 col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex flex-column align-items-center justify-content-center h-100" style="min-height: 80vh;">
                <h2 class="mb-4">@ViewBag.Mensaje</h2>
                <p class="lead">Selecciona un módulo desde el menú.</p>
            </div>
        </main>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
