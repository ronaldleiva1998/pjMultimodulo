@{
    ViewData["Title"] = "Gestión de Proyectos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <div class="row">
        <!-- Formulario a la izquierda -->
        <div class="col-12 col-lg-4 mb-4 mb-lg-0">
            <div class="card shadow h-100">
                <div class="card-body">
                    <h4 class="card-title mb-3 text-center">Registrar Proyecto</h4>
                    <form method="post" action="/Proyecto/Registrar">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre del Proyecto</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required />
                        </div>
                        <div class="mb-3">
                            <label for="requerimientos" class="form-label">Requerimientos</label>
                            <textarea class="form-control" id="requerimientos" name="requerimientos" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="avance" class="form-label">Avance (%)</label>
                            <input type="number" class="form-control" id="avance" name="avance" min="0" max="100" value="0" required />
                        </div>
                        <div class="mb-3">
                            <label for="tiempoEstimado" class="form-label">Tiempo Estimado (días)</label>
                            <input type="number" class="form-control" id="tiempoEstimado" name="tiempoEstimado" min="1" required />
                        </div>
                        <div class="mb-3">
                            <label for="encargado" class="form-label">Encargado</label>
                            <select class="form-select" id="encargado" name="encargado" required>
                                <option value="">Seleccione el encargado</option>
                                <option value="Juan Pérez">Juan Pérez</option>
                                <option value="Ana Gómez">Ana Gómez</option>
                                <option value="Carlos Ruiz">Carlos Ruiz</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Registrar Proyecto</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Tabla a la derecha -->
        <div class="col-12 col-lg-8">
            <div class="card shadow h-100">
                <div class="card-body">
                    <h4 class="card-title mb-3 text-center">Proyectos Registrados</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Requerimientos</th>
                                    <th>Avance (%)</th>
                                    <th>Tiempo Estimado</th>
                                    <th>Encargado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Aquí se deben mostrar los proyectos registrados dinámicamente -->
                                <tr>
                                    <td>Sistema de Reservas</td>
                                    <td>Login, gestión de citas, reportes</td>
                                    <td>40</td>
                                    <td>15</td>
                                    <td>Juan Pérez</td>
                                </tr>
                                <tr>
                                    <td>Inventario Restaurante</td>
                                    <td>Registro de productos, control de stock</td>
                                    <td>70</td>
                                    <td>10</td>
                                    <td>Ana Gómez</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
